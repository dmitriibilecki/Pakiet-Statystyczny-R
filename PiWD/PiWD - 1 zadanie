        col=c("red","red2", "orangered2" , "orangered", "orange", "goldenrod2","orange1", "gold2" ,"gold","yellow1", "yellow",'white'),
        main="0-4", frame.plot= FALSE,
        ylim=c(0,8000)
        
        )
#2) Prawy
boxplot(cc2r,
        col=c("red","red2", "orangered2" , "orangered", "orange", "goldenrod2","orange1", "gold2" ,"gold","yellow1", "yellow",'white'),
